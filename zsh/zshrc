#compdef c=fasd_cd

v() {
    if [[ -n $@ ]]; then
        local file=$(fasd -f $@)
        [[ -n $file ]] && vim "${file}"
    else
        local file=$(fasd -ftlR | fzf --no-sort --tiebreak=index)
        [[ -n $file ]] && vim "${file}"
    fi
}
c() {
    if [[ -n $@ ]]; then
        local dir=$(fasd -d $@)
        [[ -n $dir ]] && cd "${dir}"
    else
        local dir=$(fasd -dtlR | fzf --no-sort --tiebreak=index)
        [[ -n $dir ]] && cd "${dir}"
    fi
}

_v() {
    zle kill-buffer
    local file=$(fasd -ftlR | fzf --exact --no-sort --tiebreak=index)
    if [[ -n $file ]]; then
        zle redisplay
        BUFFER="vim \"${file}\""
        zle accept-line
    else
        zle reset-prompt
    fi
}
zle -N _v
bindkey '^[v' _v

_e() {
    zle kill-buffer
    # local var=$( (env; declare -x; set) | sort -u | cut -d= -f1 | fzf)
    local var=$( declare | grep "^\S\+=" | cut -d= -f1 | fzf )
    if [[ -n $var ]]; then
        zle redisplay
        BUFFER="echo \$$var"
        zle accept-line
    else
        zle reset-prompt
    fi
}
zle -N _e
bindkey 'â‚¬' _e

